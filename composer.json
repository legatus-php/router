{
    "name": "legatus/router",
    "description": "A fast and composable middleware router inspired in Express.js",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Matias Navarro Carter",
            "email": "contact@mnavarro.dev"
        }
    ],
    "repositories": [{
        "type": "composer",
        "url": "https://satis.mnavarro.dev"
    }],
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Legatus\\Http\\": ["src/router", "src/middleware", "src/resolver"]
        },
        "files": [
            "functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Legatus\\Http\\": ["tests/router", "tests/middleware", "tests/resolver"]
        }
    },
    "require": {
        "php": ">=7.4",
        "legatus/middleware-queue": "^0.2.0",
        "legatus/http-errors": "^0.2.0",
        "mnavarrocarter/path-to-regexp-php": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "friendsofphp/php-cs-fixer": "^2.16",
        "vimeo/psalm": "^3.7",
        "nyholm/psr7": "^1.2",
        "ext-json": "*"
    },
    "scripts": {
        "lint": "php-cs-fixer fix --ansi",
        "ci:style": "php-cs-fixer fix --dry-run -vvv --ansi",
        "ci:unit": "phpunit --testdox --coverage-text",
        "ci:types": "psalm",
        "ci": [
            "@ci:types",
            "@ci:unit",
            "@ci:style"
        ]
    }
}
